<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="143C66"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <ImageView
        android:id="@+id/fondo_inicio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/inicio_sesion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Barra superior -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.10"
        android:background="#0D2034"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="182dp"
            android:layout_height="50dp"
            android:src="@drawable/smartflow" />

        <Space
            android:layout_width="35dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ic_wifich"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_wifi_on" />

        <ImageView
            android:id="@+id/ic_bluetoothch"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_bluetooth_on" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_calendar" />

        <!-- Reloj -->
        <TextView
            android:id="@+id/tv_reloj"
            android:layout_width="110dp"
            android:layout_height="65dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="00/00/0000\n00:00:00"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_toolbar_profile" />

        <Button
            android:id="@+id/boton_usuario"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:text="Adrian Davalos Amaya"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Barra lateral -->
    <LinearLayout
        android:id="@+id/barra_lateral"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.07"
        android:layout_height="0dp"
        android:background="#0D2034"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_selected_home"
            android:contentDescription="Inicio" />


        <ImageButton
            android:id="@+id/btn_checklist"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_carrier_load_rail_data"
            android:contentDescription="Checklist"/>

        <ImageButton
            android:id="@+id/btn_sinorder"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/order_truck_rail"
            android:contentDescription="Órdenes sin asignar"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_logo_lasec" />
    </LinearLayout>

