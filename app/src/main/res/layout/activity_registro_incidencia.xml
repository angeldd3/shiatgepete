    <!-- Contenido Barra de Progreso -->


    <LinearLayout
        android:id="@+id/contenedor_info_registro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.85">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="start|center_vertical"
            android:paddingBottom="6dp"
            android:text="Registro de Incidencia"
            android:textColor="@android:color/white"
            android:textSize="55dp"
            android:textStyle="bold" />

        <!-- Descripción -->
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contenedor_registro"
        android:layout_width="0dp"
        android:layout_height="550dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="50dp"
        android:background="#001933"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.901"
        app:layout_constraintWidth_percent="0.85">

        <!-- Columna izquierda: Spinners -->
        <LinearLayout
            android:id="@+id/contenido_izquierda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/descripcion_container"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Tipo de falla*"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/spinner_tipo_falla"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="24dp"
                android:background="#183C66"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Motivo*"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/spinner_motivo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#183C66"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <!-- Parte derecha: Descripción -->
        <LinearLayout
            android:id="@+id/descripcion_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/contenido_izquierda"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción*"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#183C66"
                android:gravity="top|start"
                android:hint="Escribe aquí..."
                android:inputType="textMultiLine"
                android:minLines="4"
                android:padding="12dp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Botones debajo (alineados al centro) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/contenido_izquierda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnBaja"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Baja"
                android:textSize="18sp"
                android:backgroundTint="#143C66"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnMedia"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="Media"
                android:textSize="18sp"
                android:backgroundTint="#143C66"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnAlta"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Alta"
                android:textSize="18sp"
                android:backgroundTint="#143C66"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

