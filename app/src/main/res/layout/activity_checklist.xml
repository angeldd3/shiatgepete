<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo -->

    <!-- Barra superior -->
    <ImageView
        android:id="@+id/fondo_inicio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/inicio_sesion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.10"
        android:background="#0D2034"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="182dp"
            android:layout_height="50dp"
            android:src="@drawable/smartflow" />

        <Space
            android:layout_width="35dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ic_wifich"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_wifi_on" />

        <ImageView
            android:id="@+id/ic_bluetoothch"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_bluetooth_on" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_calendar" />

        <!-- Reloj -->
        <TextView
            android:id="@+id/tv_reloj"
            android:layout_width="110dp"
            android:layout_height="65dp"
            android:text="00/00/0000\n00:00:00"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="17sp"
            android:paddingTop="8dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_toolbar_profile" />

        <Button
            android:id="@+id/btn_userProfile"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Adrian Davalos Amaya"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Barra lateral -->
    <LinearLayout
        android:id="@+id/barra_lateral"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.07"
        android:layout_height="0dp"
        android:background="#0D2034"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_rail_home" />

        <ImageButton
            android:id="@+id/btn_checklist"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_carrier_load_data" />

        <ImageButton
            android:id="@+id/btn_sinorder"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/order_truck_rail" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_logo_lasec" />
    </LinearLayout>

    <!-- Encabezado categoría -->
    <LinearLayout
        android:id="@+id/header_electrica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_categoria"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintStart_toEndOf="@+id/barra_lateral"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sistema Eléctrico"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/arrow_electrica"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_dropdown_3" />
    </LinearLayout>


    <!-- Fila centrada: Texto + Toggle Sí / No -->
    <LinearLayout
        android:id="@+id/layout_checklist_electrica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_electrica"
        app:layout_constraintStart_toEndOf="@+id/barra_lateral"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:background="#1A1A1A"
        android:padding="8dp">

        <!-- Fila de luces (reutilizas la que ya tenías) -->
        <!-- Puedes poner más filas aquí -->
        <include
            android:id="@+id/include_fila_luces"
            layout="@layout/fila_toggle_luces" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
