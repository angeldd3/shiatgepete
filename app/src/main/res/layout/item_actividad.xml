<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0F2B45"
    android:padding="8dp">

    <!-- Sitio Origen -->
    <TextView
        android:id="@+id/tvSitioOrigen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="REB 47,11"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.20" />

    <!-- Num. Económico -->
    <TextView
        android:id="@+id/tvNumEconomico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1234"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/tvSitioOrigen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.20" />

    <!-- Tipo Acti. -->
    <TextView
        android:id="@+id/tvTipoActividad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Inspección"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/tvNumEconomico"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.20" />

    <!-- Hora Inicio -->
    <TextView
        android:id="@+id/tvHoraInicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="08:00"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/tvTipoActividad"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.20" />

    <!-- Estado -->
    <TextView
        android:id="@+id/tvEstado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Activo"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/tvHoraInicio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.20" />

</androidx.constraintlayout.widget.ConstraintLayout>
